@model IEnumerable<Converter.Currency>

@{
    ViewBag.Title = "ვალუტების რეესტრი";
}

<h2>ვალუტის რეესტრი</h2>

<p>
    @Html.ActionLink("დაამატე ვალუტა", "CreateCurrency")
</p>

<table class="table">
    <tr>
        <th>ვალუტის კოდი</th>
        <th>ვალუტის დასახელება</th>
        <th>ვალუტის დასახელება ლათინურად</th>
        <th>თანმიმდევრობის ინდექსი</th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.code)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.nameLatin)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.orderNum)
            </td>
            <td>
                @Html.ActionLink("ჩასწორება", "EditCurrency", new { id = item.code }) |
                @Html.ActionLink("წაშლა", "DeleteCurrency", new { id = item.code })
            </td>
        </tr>
    }

</table>
